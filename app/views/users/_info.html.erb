<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follows</th>
    <th>
      <%= link_to user_following_path(user) do %>
        <%= user.following_users.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>Followers</th>
    <th>
      <%= link_to user_followed_path(user) do %>
        <%= user.followed_users.count %>
      <% end %>
    </th>
  </tr>
</table>
　
<div class='row'>
  <% if current_user.id == user.id %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user), method: :delete, class: "btn btn-info follow-btn" %></td>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary follow-btn" %></td>
    <% end %>
  <% end %>
</div>